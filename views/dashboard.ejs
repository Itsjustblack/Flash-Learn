<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<link
			rel="stylesheet"
			href="/css/style.css"
		/>
		<title>QuizLearn</title>
	</head>
	<body class="h-full">
		<%- include("./partials/navbar.ejs") %>
		<main class="pt-[68px] px-10 relative bg-gray-900">
			<header class="pt-10">
				<h1 class="text-[40px] font-bold text-white">Welcome Jason</h1>
			</header>
			<section
				class="mt-20 grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 gap-x-6 gap-y-7 pb-7 justify-items-center"
			>
				<% decks.forEach((deck)=> { %>
				<a
					href="/decks/<%= deck._id %>"
					class="group block justify-self-center"
				>
					<div
						class="flex flex-col p-4 leading-normal bg-[#2e3856] w-[380px] rounded-lg h-[170px] hover:-translate-y-4 hover:shadow-sm hover:shadow-[#ffffff] transition-all duration-200"
					>
						<h5 class="mb-2 text-2xl font-bold tracking-wide text-white">
							<%= deck.title %>
						</h5>
						<div
							class="bg-slate-600 rounded-xl font-semibold text-sm py-1 text-white w-fit px-4"
						>
							<%= deck.cards.length %> Cards
						</div>
					</div>
				</a>
				<% }) %>
			</section>
		</main>
	</body>
</html>
