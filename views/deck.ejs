<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width, initial-scale=1.0"
		/>
		<link
			rel="stylesheet"
			href="/css/style.css"
		/>
		<title>FlashCard Quiz</title>
	</head>
	<body>
		<%- include("./partials/navbar.ejs") %>
		<main
			class="bg-gray-900 h-screen pt-[68px] px-20 flex flex-col items-center"
		>
			<section class="pt-7">
				<header class="flex justify-between">
					<h2 class="text-white text-3xl font-bold">
						<%= currentDeck.title %>
					</h2>
					<a href="/decks/edit/<%= currentDeck._id %>">
						<button
							type="button"
							class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
						>
							Edit
						</button>
					</a>
				</header>
				<section class="mt-6">
					<div class="h-[400px] w-[700px] overflow-hidden">
						<div
							data-slides
							class="overflow relative flex"
						>
							<% currentDeck.cards.forEach((card, index)=> { %>
							<div
								id="<%= index %>"
								class="flip-card h-[400px] w-[700px] shrink-0 slide cursor-pointer inline-block"
								data-active="not-active"
								data-flipped="false"
							>
								<div class="flip-card-inner">
									<div
										class="bg-[#2e3856] rounded-lg flex justify-center items-center w-full h-full flip-card-front"
									>
										<!-- <div
											class="w-6 h-6 absolute top-5 right-5 cursor-pointer hover:scale-125 transition-transform duration-300"
										>
											<img
												class="w-full h-full object-cover"
												src="/assets/star.svg"
												alt=""
											/>
										</div> -->
										<h2 class="text-white font-semibold text-3xl">
											<%= card.question %>
										</h2>
									</div>
									<div
										class="bg-[#2e3856] rounded-lg flex justify-center items-center w-full h-full flip-card-back"
									>
										<div
											class="w-6 h-6 absolute top-5 right-5 cursor-pointer hover:scale-125 transition-transform duration-300"
										>
											<img
												class="w-full h-full object-cover"
												src="/assets/star.svg"
												alt=""
											/>
										</div>
										<h2 class="text-white font-semibold text-3xl">
											<%= card.answer %>
										</h2>
									</div>
								</div>
							</div>
							<% }) %>
						</div>
					</div>
					<div class="my-3 relative">
						<div class="flex justify-center items-center gap-x-10">
							<button
								class="h-10 w-10 rounded-full border border-white flex justify-center items-center hover:bg-slate-200 hover:bg-opacity-40 transition-colors duration-300"
								onclick="changeSlide(-1)"
							>
								<img
									class="w-[90%] h-[90%] object-cover"
									src="/assets/arrow-left.svg"
									alt=""
								/>
							</button>
							<div>
								<span
									id="current-slide"
									class="text-white font-light text-sm"
								>
								</span>
							</div>
							<button
								class="h-10 w-10 rounded-full border border-white flex justify-center items-center hover:bg-slate-200 hover:bg-opacity-40 transition-colors duration-300"
								onclick="changeSlide(1)"
							>
								<img
									class="w-[90%] h-[90%] object-cover"
									src="/assets/arrow-right.svg"
									alt=""
								/>
							</button>
						</div>
						<button
							class="hover:scale-105 transition-transform duration-200 absolute top-[20%] right-5"
							type="button"
							id="delete-card"
							data-currentCard="<%= currentDeck._id %>"
						>
							<img
								class="w-6 h-6 object-cover"
								src="/assets/delete.svg"
								alt=""
							/>
						</button>
					</div>
					<div class="w-full bg-white h-[1px] rounded-md"></div>
				</section>
			</section>
		</main>
		<script src="/scripts/deck.js"></script>
	</body>
</html>
